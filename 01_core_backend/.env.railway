# StudyAI Railway Production Environment
# Environment variables for Railway deployment

# =================================
# CORE APPLICATION SETTINGS
# =================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
HOST=0.0.0.0

# =================================
# SERVICE AUTHENTICATION & SECURITY
# =================================
# IMPORTANT: Replace these with actual secure values
SERVICE_JWT_SECRET=your-super-secure-service-jwt-secret-here
JWT_SECRET=your-user-jwt-secret-here
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# =================================
# EXTERNAL API KEYS
# =================================
# OpenAI API - Required for AI processing
OPENAI_API_KEY=your-openai-api-key-here

# =================================
# DATABASE CONFIGURATION
# =================================
# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis Configuration (Railway will provide REDIS_URL automatically)
# REDIS_URL=redis://default:password@host:port (provided by Railway)

# =================================
# FEATURE FLAGS
# =================================
# Core Features
USE_API_GATEWAY=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_GATEWAY_LOGGING=true

# Phase 3: API Contracts & Validation
REQUEST_VALIDATION_ENABLED=true
VALIDATION_STRICT_MODE=false
ENABLE_CONTRACT_VALIDATION=true

# Phase 4: Performance Optimization
PROMETHEUS_METRICS_ENABLED=true
REDIS_CACHING_ENABLED=true
CACHE_WARMING_ENABLED=true
COMPRESSION_ENABLED=true
PERFORMANCE_ANALYSIS_ENABLED=true
PERFORMANCE_METRICS_ENABLED=true

# =================================
# PERFORMANCE SETTINGS
# =================================
# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Caching Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_AI_RESPONSES=1800
CACHE_TTL_HEALTH_CHECKS=60

# =================================
# SECURITY SETTINGS
# =================================
# Security Headers
SECURE_HEADERS_ENABLED=true

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*

# =================================
# AI ENGINE CONFIGURATION
# =================================
# AI Engine Settings (if using separate AI service)
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_TIMEOUT=180000
AI_ENGINE_RETRIES=2
AI_ENGINE_ENABLED=true

# =================================
# MONITORING & OBSERVABILITY
# =================================
# Health Monitoring
HEALTH_METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=10000

# =================================
# RAILWAY-SPECIFIC OPTIMIZATIONS
# =================================
# Railway automatically provides these:
# - PORT (assigned by Railway)
# - RAILWAY_ENVIRONMENT
# - RAILWAY_PROJECT_ID
# - RAILWAY_SERVICE_ID

# Memory Management
NODE_OPTIONS=--max-old-space-size=512

# Process Management
WEB_CONCURRENCY=1

# =================================
# OPTIONAL INTEGRATIONS
# =================================
# External Monitoring (uncomment and configure as needed)
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Logging Services
# LOGTAIL_TOKEN=your-logtail-token
# PAPERTRAIL_URL=your-papertrail-url

# =================================
# DEVELOPMENT/TESTING OVERRIDES
# =================================
# These can be overridden for different environments
# ENABLE_DEBUG_LOGGING=false
# MOCK_AI_RESPONSES=false
# DISABLE_RATE_LIMITING=false