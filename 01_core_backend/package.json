{
  "name": "studyai-backend",
  "version": "1.0.0",
  "description": "StudyAI Homework Helper Backend API",
  "main": "src/gateway/index.js",
  "scripts": {
    "dev": "nodemon src/gateway/index.js",
    "start": "node src/gateway/index.js",
    "test": "tap tests/*.test.js",
    "test:gateway": "tap tests/gateway-proxy.test.js",
    "test:security": "tap tests/security.test.js",
    "test:performance": "tap tests/performance.test.js",
    "test:contracts": "node tests/contract-tests.test.js",
    "test:load": "node tests/performance-tests.js",
    "test:coverage": "tap tests/*.test.js --coverage",
    "docs:generate": "node -e \"require('./src/gateway/services/documentation-generator').documentationGenerator.generateAll()\"",
    "rollback:phase3": "node scripts/phase3-rollback.js full",
    "rollback:phase3:partial": "node scripts/phase3-rollback.js partial",
    "rollback:phase3:emergency": "node scripts/phase3-rollback.js emergency",
    "rollback:phase3:test": "node scripts/phase3-rollback.js test",
    "rollback:phase4": "node scripts/phase4-rollback.js full",
    "rollback:phase4:partial": "node scripts/phase4-rollback.js partial",
    "rollback:phase4:emergency": "node scripts/phase4-rollback.js emergency",
    "rollback:phase4:test": "node scripts/phase4-rollback.js test",
    "performance:quick": "node -e \"new (require('./tests/performance-tests').QuickPerformanceCheck)().run()\"",
    "railway:start": "./scripts/railway-start.sh",
    "railway:build": "npm ci --only=production",
    "lint": "eslint src/"
  },
  "keywords": [
    "ai",
    "education",
    "homework",
    "api"
  ],
  "author": "BoJiang",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.6.1",
    "fastify": "^5.2.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.6",
    "openai": "^4.20.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "redis": "^4.7.1",
    "resend": "^4.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nock": "^13.3.8",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.0.0",
    "tap": "^18.5.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  }
}
